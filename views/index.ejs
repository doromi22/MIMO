<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MIMO</title>
    <link rel="stylesheet" href="/styles/style.css">
</head>
<body>
    <!-- Header and Navbar Container -->
    <div class="header-navbar-container">
        <!-- header -->
        <%- include ("header.ejs") %>
        <!-- navbar -->
        <%- include ("navbar.ejs") %>
    </div>

    <div class="newcomics">
        <p>新着作品</p>
        <div class="comics-container">
            <% comics.forEach(comic => { %>
                <div class="comic-item" onclick="location.href='/viewer/<%= comic.id %>'">
                    <div class="comic-thumbnail" style="background-image: url('/uploads/<%= comic.thumbnail %>');"></div>
                    <div class="comic-title"><%= comic.title.length > 12 ? comic.title.substring(0, 12) + '...' : comic.title %></div>
                </div>
            <% }); %>
        </div>
    </div>

    <div class="overlay" id="overlay"></div>
    <script src="/scripts/scripts.js"></script>
</body>
</html>
